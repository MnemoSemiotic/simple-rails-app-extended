<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @professor.name %>
</p>

<div>

  <table>
    <thead>
      <tr>
        <th>Number</th>
        <th>Course</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @professor.sections.each do |section| %>
      <tr>
        <td><%= section.number %></td>
        <td class="section-course-name"><%= section.course.name %></td>
        <td><%= section.students.count %> Students Enrolled</td>
        <td>
          <table>
            <tbody>

              <td><% section.students.count %> Students Enrolled</td>
            </tbody>
          </table>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>
</div>
<%= link_to 'Edit', edit_professor_path(@professor) %> |
<%= link_to 'Back', professors_path %>
